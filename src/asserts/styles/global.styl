ul,li
  list-style-type none
  padding 0
  margin 0
textarea,input
  border none
  margin: 0;
  padding 0
  outline none
a
  color #000
  cursor pointer
  text-decoration none
#wrapper
  background-color #fff
  position relative
  width 100%
  height 100%
  overflow hidden
  z-index 999
#header
  background-color #fff
  height 50px
  line-height 50px
  position relative
  text-align center
  font-size 20px
  color #28303b
  font-weight bold
  .menu_icon
    width 50px
    height 50px
    position absolute
    left 0
    top 0
    background url("../asserts/images/icon.png") 0 -420px
.view
  position absolute
  top 50px
  bottom 0
  width 100%
  transition opacity .2s ease
  box-sizing border-box
  overflow-y scroll
  overflow-x hidden
  &.v-enter, &.v-leave
    opacity 0
.wrapper
  padding 0 10px
  line-height 20px
.celled
  border-bottom 1px solid #ccc
.container
  padding 10px 0
  .pic
    img
      width 100%
.loader
  position fixed
  left 0
  top: 0
  bottom 0
  width 100%
  img
    center()
    border-radius 10px